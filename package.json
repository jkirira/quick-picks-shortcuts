{
  "name": "quick-picks-shortcuts",
  "displayName": "Quick Picks Shortcuts",
  "description": "Access your favourite commands as quick picks",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quick-picks-shortcuts.showQuickPicksShortcuts",
        "title": "Show Quick Picks Shortcuts"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quick-picks-shortcuts.showQuickPicksShortcuts"
        }
      ]
    },
    "configuration": {
      "title": "Quick Picks Shortcuts",
      "properties": {
        "quick-picks-shortcuts.shortcuts": {
          "type": "object",
          "description": "Add your shortcuts that you would like to appear in quick picks.",
          "scope": "application",
          "patternProperties": {
            ".*": { "type": "string" }
          },
          "default": {
            "Sample Command Display Name" : "sample.command.name"
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
